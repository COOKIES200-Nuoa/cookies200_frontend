{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "node",  // Retained for Node.js compatibility
    "target": "ES2022",
    "lib": ["ES2023"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true
  },
  // "include": ["**/*.ts"],
  "include": ["vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
