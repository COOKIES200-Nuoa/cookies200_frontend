{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "allowJs": true,
    "module": "ESNext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",  // Updated for Vite
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "vite.config.ts" // Add this line to exclude the Vite config file
  ],
  "include": ["**/*.ts", "**/*.tsx", "src/**/*"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
